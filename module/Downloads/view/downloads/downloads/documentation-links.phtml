<?php
/**
 * Partial script for creating download dialogs for documentation
 * Expects:
 * - $version: ZF version
 * - $id: ID for dialog div
 * - $releases: Downloads\Model\ReleaseModel instance
 */

$languages    = $this->releases->getManualLanguages($this->version);
$languageKeys = array(
    'en' => 'English',
    'de' => 'Deutsch (German)',
    'fr' => 'Français (French)',
    'ru' => 'Русский (Russian)',
    'ja' => '日本語 (Japanese)',
    'zh' => '简体中文 (Simplified Chinese)',
);
?>

<?php if ($this->releases->hasApidocs($this->version)): ?>
    <li class="divider"></li>
    <li class="header">API documentation</li>
    <li>
        <a href="<?php echo $this->releases->getApidocArchive($this->version, 'zip') ?>">zip</a>
    </li>
    <li>
        <a href="<?php echo $this->releases->getApidocArchive($this->version, 'tar.gz') ?>">tar.gz</a>
    </li>
<?php endif; ?>
<?php foreach ($languages as $language): ?>
    <li class="divider"></li>
    <li class="header"><?php echo ($languageKeys[$language]) ?></li>
    <li>
        <a href="<?php echo $this->releases->getManualArchive($this->version, $language, 'zip') ?>">zip</a>
    </li>
    <li>
        <a href="<?php echo $this->releases->getManualArchive($this->version, $language, 'tar.gz') ?>">tar.gz</a>
    </li>
<?php endforeach; ?>
