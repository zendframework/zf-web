    if (array_key_exists('name', $attribs) &amp;&amp; empty($attribs['name'])) {
        unset($attribs['name']);
    }

    $html = '_htmlAttribs($attribs)
          . '&gt;';

    if (false !== $content) {
        $html .= $content
              .  '';
    }

