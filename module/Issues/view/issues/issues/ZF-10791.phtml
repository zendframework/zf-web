public function form($name, $attribs = null, $content = false)
{
    $info = $this-&gt;_getInfo($name, $content, $attribs);
    extract($info);

    // Set the id attribute if it exists
    if (!empty($id)) {
        $id = ' id="' . $this-&gt;view-&gt;escape($id) . '"';
    } else {
